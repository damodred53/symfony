{% extends 'base.html.twig' %}

{% block title %} Projet symfony M1 Twitter {% endblock %}

{%  block body  %}
    <ul>
    {% for post in posts %}
        <li>{{ post.author }} - {{ post.createdAt }} </li>
        <div>{{post.content}}</div>


    {% else %}
        <li>Aucun produit trouv√©.</li>

        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Email address</label>
            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Example textarea</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
    {% endfor %}
</ul>

    <form method="post" action="{{ path('app_tweets_create') }}">
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Ajouter un commentaire</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" name="content" rows="3"></textarea>
        </div>
        <button type="submit">Publier</button>
    </form>


{% endblock %}
