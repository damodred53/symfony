<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="{{ asset('styles/posts.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/error.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/logo.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/user.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/show.css') }}">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}

        {% endblock %}
    </head>
    <body>

        <nav class="navbar navbar-expand-lg custom-navbar">
    <div class="container-fluid d-flex justify-content-between align-items-center px-4">
        <div class="d-flex align-items-center">
            <h1 class="navbar-title mb-0 me-4">Notre Twitter</h1>
            <img class="navbar-logo logo" alt="logo de notre site" src="{{ asset('assets/logo_symfony.png') }}" />
        </div>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link custom-link" href="{{ path(name = 'app_home') }}">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link custom-link" href="{{ path(name = 'app_post_frontend') }}">Vos tweets</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link custom-link" href="{{ path(name = 'app_user_frontend_index') }}">Utilisateurs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link custom-link" href="{{ path(name = 'app_post_frontend_search') }}">Recherche des posts</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link custom-link" href="{{ path(name = 'app_user_new') }}">Profil</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Notre twitter</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path(name = 'app_home') }}">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path(name = 'app_post_frontend') }}">Vos tweets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path(name = 'app_user_frontend_index') }}">Liste des utilisateurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path(name = 'app_user_new') }}">Inscription</a>
                        </li>
                        {% include 'logout_button_template.twig' %}
                    </ul>
                </div>
            </div>
        </nav>

        <div class='container my-4' >
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
